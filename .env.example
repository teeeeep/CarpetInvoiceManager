# Database Configuration
DATABASE_URL=sqlite:///carpet_invoices.db

# Flask Configuration
SESSION_SECRET=your-secret-session-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# Application Settings
APP_NAME=Carpet Invoices
APP_VERSION=1.0.0

# Email Configuration (optional - for future email features)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Deployment Settings
PORT=5000
HOST=0.0.0.0

# Logging Level
LOG_LEVEL=DEBUG

# PDF Generation Settings
PDF_TIMEOUT=30
PDF_DPI=300

# New Zealand Localization
DEFAULT_CURRENCY=NZD
GST_RATE=15.0
DATE_FORMAT=DD/MM/YYYY
TIMEZONE=Pacific/Auckland

# File Storage (for future file upload features)
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Performance Settings
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_TIMEOUT=20
SQLALCHEMY_POOL_RECYCLE=300
SQLALCHEMY_MAX_OVERFLOW=20

# Backup Settings (for future backup features)
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Development/Production Flags
DEBUG_TOOLBAR=False
TESTING=False
